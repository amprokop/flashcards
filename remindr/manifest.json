{
  "name": "Remindr",
  "description": "This extension lets users easily create flashcards.",
  "version": "1.0",
  "manifest_version": 2,
  
  "background": {
    "page": "background.html"
  },

  "permissions": [
    "tabs",
    "<all_urls>",
    "contextMenus"
  ],

  "icons" : {
    "16" : "icon_small.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["selection.js"],
      "run_at":"document_start",
      "all_frames":true
    }
  ],

  "browser_action" : {
    "default_title" : "Remindr",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}